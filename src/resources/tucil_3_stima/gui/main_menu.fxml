<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tucil_3_stima.gui.MainController">
    <!-- Background ImageView that fills the scene -->
    <ImageView fx:id="backgroundImageView" fitHeight="675" fitWidth="1200" preserveRatio="false" />
   <FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0">
      <children>

          <!-- Other UI elements on top -->
         <Button fx:id="btnAbout" prefHeight="80.0" prefWidth="800.0" style="-fx-font-size: 18px; -fx-padding: 10px;" text="About this UwU" wrapText="true" onMouseClicked="#handleAbout">
            <padding>
               <Insets bottom="30.0" top="30.0" />
            </padding>
            <font>
               <Font size="24.0" />
            </font>
            <FlowPane.margin>
               <Insets bottom="8.0" right="-32.0" top="8.0" />
            </FlowPane.margin>
         </Button>
         <Button fx:id="btnExit" prefHeight="80.0" prefWidth="800.0" style="-fx-font-size: 18px; -fx-padding: 10px;" text="Exit TwT" wrapText="true" onMouseClicked="#handleExit">
            <padding>
               <Insets bottom="30.0" top="30.0" />
            </padding>
            <font>
               <Font size="24.0" />
            </font>
            <FlowPane.margin>
               <Insets bottom="8.0" right="-32.0" top="8.0" />
            </FlowPane.margin>
         </Button>
      </children>
   </FlowPane>
</StackPane>
